<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>MongoDB Data Display</title>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
            padding: 8px;
        }
    </style>
</head>
<body>
    <h1>Items from MongoDB</h1>

    <% if (items && items.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <!-- Loop through the 'items' array passed from the server -->
                <% items.forEach(function(item) { %>
                    <tr>
                        <td><%= item._id %></td>
                        <td><%= item.name %></td>
                        <td><%= item.value %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No items found in the database.</p>
    <% } %>
</body>
</html>
